<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %> <%- include ('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">payment</a></li>
            <li class="breadcrumb-item active">Tambah payment</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header bg-primary">
              <h3 class="card-title">
                <strong class="text-white">Form payment</strong>
              </h3>
            </div>
            <!-- /.card-header -->
            <form method="post" action="/payment/create">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Tipe</label>
                  <input
                    type="text"
                    class="form-control"
                    name="type"
                    placeholder="Type"
                  />
                </div>
                <div class="form-group">
                  <label for="banks">Bank</label>
                  <select
                    name="banks"
                    class="form-control select2bs4"
                    id=""
                    multiple="multiple"
                  >
                    <option value="">-- Bank --</option>
                    <% bank.map((v,i) => { %>
                    <option value="<%- v._id %>">
                      <%- v.name %> <%- v.nameBank %> <%- v.noRekening %>
                    </option>
                    <% }) %>
                  </select>
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>

            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ('../../partials/footer.ejs') %> <%- include
('../../partials/js.ejs') %>
